@using TCC.Controllers
@using TCC.Views.Shared.Components
@model TCC.Models.EditIncome

@{
    SelectList categorySelectList = new SelectList(Model.Categories, "Id", "Name");
    SelectList accountSelectList = new SelectList(Model.Accounts, "Id", "Name");
}

<div class="modal-dialog" role="document">
    <div class="modal-content bg-dark">
        <div class="modal-header">
            <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                <span class="icon icon-close icon-2x"></span>
                <span class="btn-close-label hidden-sm-down">esc</span>
            </button>
            <h4 class="modal-title text-white" id="IncomeModalLabel">Edit Income</h4>
        </div>
        @using (Html.BeginForm("Edit", "Incomes", FormMethod.Post, new { id = "formId" }))
        {
            <div class="modal-body form-group">
                @Html.HiddenFor(m => m.Id)
                <div class="input-group">
                    <span class="input-group-addon bg-dark text-white" id="basic-addon1">$</span>
                    @Html.EditorFor(m => m.Value, new { htmlAttributes = new { @class = "form-control bg-dark text-white" } })
                </div>
                <br>
                <div class="form-group row">
                    <label for="example-date-input" class="col-xs-2 col-form-label text-white">Date:</label>
                    <div class="col-xs-10">
                        @Html.EditorFor(m => m.TransactionDate, new { htmlAttributes = new { @class = "form-control bg-dark text-white", @id = "expense-date" } })
                    </div>
                </div>
                <div class="input-group">
                    <span class="input-group-addon bg-dark text-white" id="basic-addon1"><span class="icon icon-file-new"></span></span>
                    @Html.EditorFor(m => m.Description, new { htmlAttributes = new { @class = "form-control bg-dark text-white", @placeholder = "Description" } } )
                </div>
                <br>
                <div class="form-group">
                    <label class="text-white" for="categorySelect">Category</label>
                    @Html.DropDownListFor(m => m.CategoryId, categorySelectList as SelectList, new { @class = "form-control bg-dark text-white categorySelect" })
                </div>
                <div class="form-group">
                    <label class="text-white">Account</label>
                    @Html.DropDownListFor(m => m.AccountId, accountSelectList as SelectList, new { @class = "form-control bg-dark text-white accountSelect" })
                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-success">
                </div>
            </div>
        }
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#formId").submit(function (event) {
            event.preventDefault();
            var formData = $(this).serialize();
            $.ajax({
                type: "POST",
                url: "/Incomes/Edit",
                data: formData,
                success: function () {
                    location.reload();
                }
            });
        });
    });
</script>